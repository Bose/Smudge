turnstile
{
   *locked (@lockedEnter) // The * means it's the initial state.
    [
        coin -(@flashLEDs)-> unlocked
    ] (@lockedExit),

    unlocked (@unlockedEnter)
    [
        person -(@soundOkay)-> locked
    ]
}
