turnstile
{
   *power-on -(@lightLEDs)-> locked,

    locked (@lockedEnter)
    [
        coin -(@flashLEDs)-> unlocked,
        person -(@soundAlarm)-
    ] (@lockedExit),

    unlocked (@unlockedEnter)
    [
        person -(@soundOkay)-> locked
    ]
}
